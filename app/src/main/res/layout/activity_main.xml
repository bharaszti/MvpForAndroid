<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/number_of_persons" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfPersonsTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Person"
        android:id="@+id/newPersonButton"
        android:onClick="onClickNewPerson"
        android:layout_below="@+id/numberOfPersonsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persons"
        android:id="@+id/personsButton"
        android:onClick="onClickPersons"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/newPersonButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
